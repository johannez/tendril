{% extends "base.twig" %}

{% block content %}
  
  <article class="post-type-page" id="page-{{ post.ID }}">  
    {% include 'partials/page-header.twig' with 
      {
        'image': post.get_field('header_image'),
        'title': post.title,
        'subheader': post.get_field('subheader'),
        'classes': 'mb-6 md:mb-12 lg:mb-20'
      }
    %}

    <section class="relative overflow-hidden">
      <div class="molecules molecules--content hidden lg:block">
        {% include 'icons/molecules.svg' %}
      </div>
      <div class="max-w-container mx-auto px-4">
        {% include 'partials/blocks.twig' with {'blocks': get_blocks(post.post_content)} %}
      </div>
    </section>

    {% block page_bottom %}
    {% endblock %}
  </article>
  
{% endblock %}
